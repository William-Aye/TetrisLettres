<Page x:Class="TetrisLettres.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisLettres"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800"
        Name="MenuDepart"
        FontSize="25"
        FontFamily="Impact">

    <StackPanel Name="test" HorizontalAlignment="Center" VerticalAlignment="Center" >
        <TextBox Text="Letris" Padding="50" Background="Transparent" BorderBrush="Transparent" FontSize="50" Foreground="DarkBlue" IsHitTestVisible = "False"/>
        <Button Name="BoutonJouer"   Click="MenuClick" Padding="5" Content="Jouer"/>
        <Button Name="BoutonOption"  Click="MenuClick" Padding="5" Content="Option"/>
        <Button Name="BoutonQuitter" Click="MenuClick" Padding="5" Content="Quitter"/>
    </StackPanel>
</Page>
